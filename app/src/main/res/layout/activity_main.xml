<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ссылка"/>
    <Button
        android:id="@+id/xml_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XML"/>
    <Button
        android:id="@+id/dialog_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Диалоговое окно"/>

    <Button
        android:id="@+id/cam_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Камера" />
    <Button
        android:id="@+id/regex_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RegEx"/>

    <Button
        android:id="@+id/addCategory_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить категорию" />

    <Button
        android:id="@+id/updateCategory_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Изменить категорию" />

    <Button
        android:id="@+id/deleteCategory_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Удалить категорию" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/category_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>